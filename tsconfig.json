{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": ["es2021"],
        "target": "es2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "skipLibCheck": true,
        "strict": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/*"]
}
