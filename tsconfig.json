{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": ["es2020", "es6", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "strict": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "sourceMap": true,
        "target": "es2019"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/*"]
}
