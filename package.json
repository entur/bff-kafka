{
    "name": "@entur/bff-kafka",
    "version": "0.0.1",
    "private": true,
    "description": "A backend that handles Entur Kafka integration for Entur clients.",
    "author": "Entur AS",
    "type": "module",
    "engines": {
        "node": "18",
        "npm": "9"
    },
    "scripts": {
        "start": "node dist/server.js",
        "test": "jest",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "debug": "./scripts/debug.sh",
        "dev": "npm run debug dev",
        "staging": "npm run debug staging",
        "prod": "npm run debug prod",
        "build:dev": "tsc && npm run populate-env-vars dev",
        "build:staging": "tsc && npm run populate-env-vars staging",
        "build:prod": "tsc && npm run populate-env-vars prod",
        "build:beta": "tsc && npm run populate-env-vars beta",
        "build:int": "tsc && npm run populate-env-vars int",
        "deploy": "./scripts/deploy.sh",
        "ts": "tsc --noEmit",
        "transpile": "tsc",
        "prettier": "prettier . --check",
        "populate-env-vars": "node --loader ts-node/esm/transpile-only ./scripts/environment.ts",
        "verify": "npm run ts && npm run lint && npm run prettier"
    },
    "dependencies": {
        "@google-cloud/logging-winston": "^4.0.1",
        "@google-cloud/pubsub": "^2.11.0",
        "@google-cloud/secret-manager": "^3.6.0",
        "@google-cloud/trace-agent": "^5.1.1",
        "@kafkajs/confluent-schema-registry": "^2.0.1",
        "kafkajs": "^1.15.0",
        "kafkajs-snappy": "^1.1.0",
        "lz4": "^0.6.5",
        "uuid": "^8.3.2",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@tsconfig/node18": "^18.2.2",
        "@types/lz4": "^0.6.4",
        "@types/node": "^20.11.10",
        "@types/uuid": "^8.3.3",
        "@typescript-eslint/eslint-plugin": "^5.6.0",
        "@typescript-eslint/parser": "^5.6.0",
        "eslint": "^8.4.1",
        "eslint-plugin-fp": "^2.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.4.4",
        "nodemon": "^2.0.6",
        "prettier": "^2.2.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    }
}
